@model ProjetoDDD.MVC.ViewModels.VendaViewModel

@{
    ViewBag.Title = "Sistema de Vendas - Deleção da Venda";
    Layout = null;
}

<h2>Deletar Venda</h2>

<h3 class="delete">Tem certeza que deseja deletar essa venda?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Pedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pedido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClienteId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ColaboradorId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Colaborador.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="buttons-modal">
            <a href="#myModal" data-dismiss="modal"><img src="~/img/button/back.svg" class="icon" /></a>
            <input id="btnSubmit" type="image" src="~/img/button/delete-confirm.svg" class="icon" />
        </div>
    }
</div>
